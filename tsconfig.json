{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./custom.d.ts", "./src/"],
  // "exclude": ["./src/renderer"], // Exclude renderer folder from being compiled
  "overrides": [
    {
      "include": ["./src/*"], // Include only the files directly under src folder
      "compilerOptions": {
        "module": "commonjs"
      }
    }
  ]
}
